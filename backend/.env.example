# Environment Variables Template

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cv_enhancer

# JWT Secrets
ACCESS_TOKEN_SECRET=your-access-token-secret-here
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=7d

# Email (Resend)
RESEND_API_KEY=your-resend-api-key

# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Embedding Configuration
EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_DIM=3072

# Matching Configuration
MATCH_TOP_K=5
SIM_FLOOR=0.15
SIM_LOW_THRESHOLD=0.4
SIM_HIGH_THRESHOLD=0.75

# LLM Judge
LLM_JUDGE_ENABLED=true
LLM_JUDGE_BATCH_SIZE=10
GEMINI_MAX_RETRIES=3
GEMINI_RETRY_DELAY_MS=1000

# Multi-Mention Logic
MULTI_MENTION_THRESHOLD=3
MULTI_MENTION_HIGH_SIMILARITY=0.85
MULTI_MENTION_MEDIUM_SIMILARITY=0.55
MULTI_MENTION_MEDIUM_THRESHOLD=4
DEDUP_SIMILARITY_THRESHOLD=0.95

# Rule Classification
RULE_CLASSIFICATION_HIGH_THRESHOLD=0.8
RULE_CLASSIFICATION_AMBIGUOUS_THRESHOLD=0.5
SEMANTIC_CLASSIFICATION_ENABLED=true

# CORS
CORS_ORIGIN=http://localhost:4000

# Rate Limiting
RATE_LIMIT_SHORT_TTL=60000
RATE_LIMIT_SHORT_MAX=10
RATE_LIMIT_LONG_TTL=3600000
RATE_LIMIT_LONG_MAX=100

# Environment
NODE_ENV=development
PORT=4000
